---
import { Image } from 'astro:assets';

const { image } = Astro.props;
---
<figure>
    <Image
        class="w-full"
        src={image.src}
        alt={image.alt}
        width={image.width}
        height={image.height}
        format={image.format}

    />
    {
        image.caption && (
            <figcaption class="w-full pt-1 text-sm text-center">{image.caption}</figcaption>
        )
    }
</figure>
