---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";

import { siteTitle, siteStrapline } from "../data/site.json";
import PageSection from "../components/PageSection.astro";
---

<Layout pageTitle={siteTitle}>
  <Hero pageTitle={siteTitle} pageSubTitle={siteStrapline} />
  <PageSection>
    <div class="space-y-4 flex flex-col items-center">
      <h2 class="mx-auto text-4xl font-headers font-weight-headers">
        Calendar
      </h2>
      <div class="w-full overflow-x-auto flex flex-col">
        <iframe
          class="mx-auto"
          title="Lakeland Fiddlers rehearsal and performance calendar"
          src="https://calendar.google.com/calendar/embed?src=thelakelandfiddlers%40gmail.com&ctz=Europe%2FLondon"
          style="border: 0"
          width="800"
          height="600"
          frameborder="0"
          scrolling="no"></iframe>
      </div>
    </div>
  </PageSection>
</Layout>
